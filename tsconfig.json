{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outFile": "build/game.js",
        "experimentalDecorators": true,
        "sourceMap": true,
        "watch": true
    },
    "include": [
        "game/**/*",
        "libs"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}